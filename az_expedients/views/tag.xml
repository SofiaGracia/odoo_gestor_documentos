<odoo>
	<data>
		<!-- explicit list view definition -->

		<record model="ir.ui.view" id="az_expedients.tag_list">
			<field name="name">az_expedients tag list</field>
			<field name="model">az_expedients.tag</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<!-- explicit kanban view definition -->

		<!-- explicit form view definition -->

		<record id="az_expedients.tag_form" model="ir.ui.view">
			<field name="name">Etiqueta</field>
			<field name="model">az_expedients.tag</field>
			<field name="arch" type="xml">
				<form string="Etiqueta">
					<sheet>
						<div class="oe_title mb24">
							<h1>
								<field name="name" placeholder="Nombre"/>
							</h1>
						</div>
						<group>
							<field name="color" widget="color_picker"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- actions opening views on models -->

		<record model="ir.actions.act_window" id="az_expedients.tag_action_window">
			<field name="name">Etiquetas</field>
			<field name="res_model">az_expedients.tag</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</odoo>